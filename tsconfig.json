{
  "compilerOptions": {
    "baseUrl": "./packages",
    "strict": true,
    "target": "es6",
    "types": ["node"],
    "downlevelIteration": true,
    "lib": ["ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ESNext"],
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "exclude": ["/dist", "node_modules"]
}
