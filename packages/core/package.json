{
  "name": "@magnetarjs/core",
  "version": "0.13.7",
  "sideEffects": false,
  "description": "Magnetar core library.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsup src/index.ts --clean --format esm,cjs --dts",
    "dev": "pnpm build --watch",
    "test-and-build": "npm run test && npm run build",
    "test": "ava",
    "test--only": "ava --match='*only:*'"
  },
  "author": "Luca Ban - Mesqueeb",
  "funding": "https://github.com/sponsors/mesqueeb",
  "license": "TBD",
  "homepage": "https://github.com/cycraft/magnetar#readme",
  "dependencies": {
    "@magnetarjs/types": "workspace:*",
    "@magnetarjs/utils": "workspace:*",
    "getorset-anything": "^0.0.3",
    "is-what": "^4.1.7",
    "merge-anything": "^5.1.1"
  },
  "devDependencies": {
    "@magnetarjs/test-utils": "workspace:*"
  },
  "keywords": [
    "vuex-easy-firestore",
    "magnetar",
    "magnetarjs",
    "state-management",
    "syncing-solution",
    "db-sync",
    "auto-sync",
    "framework-agnostic",
    "optimistic-ui",
    "vuejs",
    "vuex",
    "vue-sync",
    "vue-state",
    "vue-db",
    "vue-store",
    "firestore",
    "data-store",
    "local-store",
    "remote-store",
    "global-store",
    "database-sync",
    "database-management",
    "database"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cycraft/magnetar.git"
  },
  "bugs": {
    "url": "https://github.com/cycraft/magnetar/issues"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "esbuild-register"
    ],
    "timeout": "60s"
  }
}
