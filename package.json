{
  "name": "magnetar-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:vue2-firestore": "pnpm --filter dev-vue2-firestore dev",
    "dev:vue3": "pnpm --filter dev-vue3 dev",
    "dev:vue3-firestore": "pnpm --filter dev-vue3-firestore dev",
    "dev:docs": "pnpm --filter docs dev",
    "build:favicon": "copyfiles media/* packages/docs/public && cd packages/docs && npm run build:favicon",
    "build": "pnpm -r build",
    "build-and-commit": "npm run build && git add -A && git commit -m \"chore: build\"",
    "test": "npm run test:core && npm run test:plugin-firestore && npm run test:plugin-simple-store && npm run test:plugin-vue2 && npm run test:plugin-vue3",
    "test:core": "cd packages/core && npm run test",
    "test:plugin-firestore": "cd packages/plugin-firestore && npm run test",
    "test:plugin-simple-store": "cd packages/plugin-simple-store && npm run test",
    "test:plugin-vue2": "cd packages/plugin-vue2 && npm run test",
    "test:plugin-vue3": "cd packages/plugin-vue3 && npm run test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "release": "pnpm build && bumpp package.json packages/*/package.json --commit --push --tag && pnpm -r publish --access public",
    "deploy:docs": "npm run build:favicon && pnpm --filter docs build:docs && firebase deploy --only hosting && git add -A && git commit -m \"chore: deploy\""
  },
  "devDependencies": {
    "@types/node": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "ava": "^4.0.0",
    "bumpp": "^7.1.1",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.14.42",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-tree-shaking": "^1.9.2",
    "exec-sh": "^0.4.0",
    "npm-check-updates": "^12.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "tslib": "^2.3.1",
    "tsup": "^6.0.1",
    "turbo": "^1.2.14",
    "typescript": "^4.5.4"
  },
  "author": "Luca Ban - Mesqueeb",
  "funding": "https://github.com/sponsors/mesqueeb",
  "license": "MIT",
  "homepage": "https://github.com/cycraft/magnetar#readme",
  "bugs": {
    "url": "https://github.com/cycraft/magnetar/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cycraft/magnetar.git"
  },
  "engines": {
    "node": ">= 14.0.0",
    "npm": ">= 7.8.0"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "tree-shaking"
    ],
    "ignorePatterns": [
      "node_modules",
      "dist",
      "/packages/dev-firestore",
      "/packages/dev-vue2",
      "/packages/dev-vue2-firestore",
      "/packages/dev-vue3",
      "/packages/dev-vue3-firestore",
      "/packages/docs",
      "test"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/ban-ts-ignore": "off",
      "tree-shaking/no-side-effects-in-initialization": "error",
      "@typescript-eslint/no-non-null-assertion": "off",
      "comma-dangle": [
        "warn",
        "always-multiline"
      ],
      "@typescript-eslint/ban-ts-comment": "warn"
    }
  }
}
