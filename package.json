{
  "name": "magnetar-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:vue2-firestore": "pnpm --filter dev-vue2-firestore dev",
    "dev:vue3": "pnpm --filter dev-vue3 dev",
    "dev:vue3-firestore": "pnpm --filter dev-vue3-firestore dev",
    "dep:check-all": "ncu --target minor && pnpm --parallel exec ncu --target minor",
    "dep:update-all": "ncu --target minor -u && pnpm --parallel exec ncu --target minor -u && pnpm i",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:deploy": "pnpm run docs:build && firebase deploy --only hosting && git add -A && git commit -m \"chore: deploy\"",
    "docs:serve": "vitepress serve docs",
    "build": "pnpm -r build",
    "build-and-commit": "npm run build && git add -A && git commit -m \"chore: build\"",
    "test": "npm run test:core && npm run test:plugin-simple-store && npm run test:plugin-vue2 && npm run test:plugin-vue3 && npm run test:plugin-firestore-admin",
    "test:core": "cd packages/core && npm run test",
    "test:plugin-firestore": "cd packages/plugin-firestore && npm run test",
    "test:plugin-firestore-admin": "cd packages/plugin-firestore-admin && npm run test",
    "test:plugin-firestore:only": "cd packages/plugin-firestore && npm run test--only",
    "test:plugin-simple-store": "cd packages/plugin-simple-store && npm run test",
    "test:plugin-vue2": "cd packages/plugin-vue2 && npm run test",
    "test:plugin-vue3": "cd packages/plugin-vue3 && npm run test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "release": "pnpm build && bumpp package.json packages/*/package.json --commit --push --tag && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@types/node": "^18.7.8",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "ava": "^4.3.1",
    "bumpp": "^8.2.1",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.15.5",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-tree-shaking": "^1.10.0",
    "exec-sh": "^0.4.0",
    "npm-check-updates": "^16.0.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "tslib": "^2.4.0",
    "tsup": "^6.2.2",
    "turbo": "^1.4.3",
    "typescript": "^4.7.4",
    "vitepress": "1.0.0-alpha.9"
  },
  "author": "Luca Ban - Mesqueeb",
  "funding": "https://github.com/sponsors/mesqueeb",
  "license": "MIT",
  "homepage": "https://github.com/cycraft/magnetar#readme",
  "bugs": {
    "url": "https://github.com/cycraft/magnetar/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cycraft/magnetar.git"
  },
  "engines": {
    "node": ">= 14.0.0",
    "npm": ">= 7.8.0"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "tree-shaking"
    ],
    "ignorePatterns": [
      "node_modules",
      "dist",
      "/packages/dev-firestore",
      "/packages/dev-vue2",
      "/packages/dev-vue2-firestore",
      "/packages/dev-vue3",
      "/packages/dev-vue3-firestore",
      "/packages/docs",
      "test"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/ban-ts-ignore": "off",
      "tree-shaking/no-side-effects-in-initialization": "error",
      "@typescript-eslint/no-non-null-assertion": "off",
      "comma-dangle": [
        "warn",
        "always-multiline"
      ],
      "@typescript-eslint/ban-ts-comment": "warn"
    }
  },
  "version": "0.7.3",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "@firebase/app-types",
        "@types/react",
        "react-dom",
        "react"
      ]
    }
  }
}
