{
  "name": "magnetar",
  "private": true,
  "scripts": {
    "audit": "lerna-audit",
    "dev": "cd packages/dev && npm run dev",
    "dev:docs": "cd packages/docs && npm run dev",
    "build:favicon": "copyfiles media/* packages/docs/public && cd packages/docs && npm run build:favicon",
    "build": "lerna run build && git add -A && git commit -m \"chore: build\"",
    "test": "lerna run test",
    "test:core": "cd packages/core && npm run test",
    "test:plugin-firestore": "cd packages/plugin-firestore && npm run test",
    "test:plugin-simple-store": "cd packages/plugin-simple-store && npm run test",
    "test:plugin-vue2": "cd packages/plugin-vue2 && npm run test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "publish": "npm run test && npm run build && lerna publish",
    "deploy:docs": "npm run build && firebase deploy --only hosting && git add -A && git commit -m \"chore: deploy\"",
    "dep:install": "npm i && lerna bootstrap",
    "dep:update-all": "ncu --target minor -u && lerna exec 'ncu --target minor -u' && npm run dep:install",
    "dep:check-for-updates": "ncu --target minor && lerna exec 'ncu --target minor'",
    "dep:reinstall-all": "rimraf node_modules && lerna clean -y && npm run dep:install"
  },
  "devDependencies": {
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "ava": "^3.14.0",
    "browser-env": "^3.3.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-tree-shaking": "^1.8.0",
    "eslint-plugin-vue": "^6.2.2",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "lerna": "^3.22.1",
    "node-sass": "^4.14.1",
    "npm-check-updates": "^9.2.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.35.1",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "author": "Luca Ban - Mesqueeb",
  "homepage": "https://github.com/cycraft/magnetar#readme",
  "bugs": {
    "url": "https://github.com/cycraft/magnetar/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cycraft/magnetar.git"
  }
}
